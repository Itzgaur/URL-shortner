<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <!-- Page Heading -->
      <h1>URL Shortner</h1>

      <!-- Form to enter URL -->
      <form action="/shortUrl" method="post" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Enter you URL</label>
        <input
          type="url"
          name="fullUrl"
          id="fullUrl"
          placeholder="Full URL"
          required
          class="form-control mr-2 col"
        />
        <button type="submit" class="btn btn-success">Shrink</button>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Click Count</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(element => { %>
          <tr>
            <td class="w-25">
              <a href="<%= element.fullUrl %>" target="_blank"
                ><%= element.fullUrl %></a
              >
            </td>
            <td>
              <a href="<%= element.shorUrl %>" target="_blank"
                ><%= element.shorUrl %></a
              >
            </td>
            <td><%= element.clicks %></td>
          </tr>

          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
